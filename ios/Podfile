# Uncomment this line to define a global platform for your project
platform :ios, '14.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Resolve Flutter SDK path from Generated.xcconfig
def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure 'flutter pub get' has been run"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run 'flutter pub get'"
end

# Load Flutter's CocoaPods helper which defines flutter_install_* helpers
# Prefer the ephemeral helper (newer Flutter), fall back to classic podhelper
flutter_ephemeral_helper = File.expand_path('../Flutter/ephemeral/.symlinks/flutter_ios_pod_helper.rb', __dir__)
if File.exist?(flutter_ephemeral_helper)
  require flutter_ephemeral_helper
else
  require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)
end

flutter_ios_podfile_setup if defined?(flutter_ios_podfile_setup)

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  if defined?(flutter_install_all_ios_pods)
    flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  elsif defined?(flutter_install_all_ios_pods!)
    flutter_install_all_ios_pods!
  elsif defined?(flutter_install_all_pods)
    flutter_install_all_pods File.dirname(File.realpath(__FILE__))
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    # Ensure all pods use the same minimum iOS deployment target
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
    end
  end
end
